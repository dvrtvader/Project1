@model IEnumerable<Project1.Models.Books.Book>


    @{
    ViewData["Title"] = "books";
    }

    <partial name="_Search" />

    <div>
        <a asp-action="Add">Add book</a>
    </div>

    <hr />
    <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(book => book.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(book => book.Poster)
                </th>
                <th>
                    @Html.DisplayNameFor(book => book.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(book => book.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(book => book.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(book => book.CreatedAt)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(bookItem => item.Id)
                </td>
                <td>
                    <img src="@item.Poster" asp-append-version="true">
                </td>
                <td>
                    @Html.DisplayFor(bookItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(bookItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(bookItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(bookItem => item.CreatedAt)
                </td>
            </tr>
        }
        </tbody>
    </table>
